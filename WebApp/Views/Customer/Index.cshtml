@model IEnumerable<WebApp.Models.RestaurantViewModel>

@{
    ViewData["Title"] = "Restaurants";
}

<h1>Looking for a restaurant?</h1>


<table class="table">
    <thead>
    <tr>
        <th>
            Restaurant
        </th>
        <th>
            Area
        </th>
        <th>

        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaName)
            </td>
            <td>
                #TODO Logo here
                @Html.DisplayFor(modelItem => item.IconPath)
            </td>
            <td>
                @Html.ActionLink("Order now", "Order", new {id = item.IdRestaurant, sum = 0})
            </td>
        </tr>
    }
    </tbody>
</table>
