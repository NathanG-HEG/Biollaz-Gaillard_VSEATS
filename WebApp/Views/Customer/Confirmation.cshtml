@model WebApp.Models.OrderViewModel

@{
    ViewData["Title"] = "Confirmation";
}

<h1>Confirmation</h1>

<div>
    <h2>Thank you for your order</h2>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Expected delivery time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExpectedDeliveryTime)
        </dd>
        <dt class="col-sm-2">
            Delivery address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeliveryAddress)
        </dd>
        <dt class="col-sm-2">
            Order total
        </dt>
        <dd class="col-sm-10">
            CHF @Html.DisplayFor(model => model.OrderTotal)
        </dd>
        <dt class="col-sm-2">
            Area name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AreaName)
        </dd>
        <dt class="col-sm-2">
            Postcode
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostCode)
        </dd>
        <dt class="col-sm-2">
            First name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerFirstName)
        </dd>
        <dt class="col-sm-2">
            Last name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerLastName)
        </dd>

        <dt class="col-sm-2">
            Restaurant
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RestaurantName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to restaurants</a>
</div>
